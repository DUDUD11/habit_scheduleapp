<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="#303030"
    android:orientation="vertical"
    android:padding="16dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- 가운데에 배치된 TextView -->
        <TextView
            android:id="@+id/date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="8dp"
            android:text="새로운"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 오른쪽 끝에 배치된 ImageButton -->
        <ImageButton
            android:id="@+id/CalenderButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_plan_c" />

    </RelativeLayout>
    <LinearLayout
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/Im_Ur"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/number_1"

            />

        <ImageView
            android:id="@+id/nIm_Ur"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/number_2"
            />

        <ImageView

            android:id="@+id/Im_nUr"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/number_3"
            />

        <ImageView
            android:id="@+id/nIm_nUr"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/number_4"
            />

        <ImageView
            android:id="@+id/Etc"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/round_alarm_off_24"
            />


    </LinearLayout>


    <EditText
        android:id="@+id/scheduletext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:gravity="top|start"
        android:hint="무슨 생각하고 있어요?"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="10"
        android:padding="16dp"
        android:scrollbars="vertical" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/cancelschedulebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="취소"

            />

        <Button
            android:id="@+id/okschedulebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="확인" />


    </LinearLayout>


</LinearLayout>
